{% extends 'base.html.twig' %}

{% block title %}Banner{% endblock %}

{% block body %}
    <h1>Banner</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ banner.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ banner.date ? banner.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Characters</th>
                <td>{% for character in banner.characters %}
                    {{ character.name }}
                {% endfor %}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('banner_index') }}">back to list</a>

    <a href="{{ path('banner_edit', {'id': banner.id}) }}">edit</a>

    {{ include('banner/_delete_form.html.twig') }}
{% endblock %}
